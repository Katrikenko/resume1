<main class="row p-5">
    <div class="col-12">
        <section>
            {{#with page_header}}
            <h1 class="text-center">{{title}}</h1>

            <p class="text-center">{{description}}</p>
            {{/with}}
        </section>
        <section>
            {{#with section}}
            <div class="card">
                <div class="card-body">

                    {{#with about_us.title_list}}
                    <div class="display-6 text-end">{{main}}</div>

                    <h2 class="text-end my-3">{{sub}}</h2>
                    {{/with}}

                    {{#with about_us.button}}
                    <button class="btn btn-outline-info">{{text}}</button>
                    {{/with}}

                </div>
            </div>

            <div class="card my-5">
                <div class="card-body">
                    {{#with advantage}}
                    <div class="display-5 text-muted">{{title}}</div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with efficiency}}
                            <div class="display-4 text-muted">{{title}}</div>

                            <h6 class="my-3">{{sub_title}}</h6>

                            <p class="my-3">{{description}}</p>

                            <button class="btn btn-outline-warning">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with innovation}}
                            <div class="display-4 text-muted text-center">{{title}}</div>

                            <h6 class="text-center my-3">{{sub_title}}</h6>

                            <p class="text-center my-3">{{description}}</p>

                            <button class="btn btn-outline-warning">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with collaboration}}
                            <div class="display-4 text-muted text-end">{{title}}</div>

                            <h6 class="text-end my-3">{{sub_title}}</h6>

                            <p class="text-end my-3">{{description}}</p>

                            <button class="btn btn-outline-warning">{{button}}</button>
                            {{/with}}
                        </div>
                    </div>

                    {{/with}}
                </div>
            </div>

            <div class="card my-5">
                <div class="card-body">
                    {{#with agreement}}
                    <div class="display-5">{{title}}</div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with info}}
                            <h5>{{sub_title}}</h5>

                            <div class="card my-3">
                                <div class="card-body">
                                    {{#with detail}}
                                    <p>{{text}}</p>
                                    <button class="btn btn-success">{{button}}</button>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </section>
    </div>
</main>