<main>
    <section class="row gx-2">
        {{#with newsBlock}}
        <h2 class="text-center mb-3">{{title}}</h2>
        {{#each cards}}
        <div class="col-3 mb-3">
            <div class="card text-bg-dark">
                <div class="card-header">
                    {{title}}
                    {{#if isTop}}
                    <span class="badge text-bg-danger rounded-pill">Top</span>
                    {{else}}
                    {{null}}
                    {{/if}}
                    {{#if isNew}}
                    <span class="badge text-bg-success rounded-pill">New</span>
                    {{else}}
                    {{null}}
                    {{/if}}
                </div>
                <div class="card-body">{{description}}</div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </section>
    <hr>
    <section class="row">
        {{#with goodsBlock}}
        <div class="col-12">

            <div class="nav nav-tabs ">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>

                    {{else}}
                    {{#if isDisabled}}
                    <a href="#" class="nav-link disabled">{{text}}</a>
                    {{else}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/if}}
                    {{/if}}

                </div>
                {{/each}}
            </div>
        </div>
        <div class="row gy-4 gx-2">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}">
                    <div class="card-body">
                        <h5 class="card-title">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>
                            {{else}}
                            {{null}}
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill">New</span>
                            {{else}}
                            {{null}}
                            {{/if}}
                        </h5>
                        <p class="mb-0">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>
    <section class="row">
        {{#with subscribe}}
        <div class="col-12">
            <div class="card text-bg-dark">
                <div class="card-header">
                    <h2>{{header}}</h2>
                </div>
                <div class="card-body">
                    <div>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                        {{/each}}
                    </div>
                    <div>

                    </div>
                </div>
            </div>
            {{/with}}
    </section>
    <hr>
    <section class="row">
        {{#with service}}
        <div class="col-12">
            <div class="card text-bg-success text-center">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}
    </section>
</main>