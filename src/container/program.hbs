<div>
    {{#with program}}
    <section>
        {{> title data="Excursion" big=true}}
        <div>
            {{#with excursion}}
            <p>{{name}}</p>
            <div>
                {{#with location}}
                <em>{{city}}, {{country}} </em>
                {{/with}}
            </div>
            <div>{{date}}</div>
            <ul>
                {{#each program}}
                <li>
                    {{name}} ({{type}}) â€” {{duration}} hours
                    <ul>
                        <div>
                            {{#if details.museum}}
                            {{#with details.museum}}
                            <b>{{name}}</b>

                            {{#with location}}
                            <address>
                                {{address}}
                                {{city}}
                                {{country}}
                            </address>
                            {{/with}}
                            <br>
                            {{#each exhibits}}
                            <li>
                                <b><em>{{name}}</em></b>
                                {{#if artist}}
                                <p>{{artist}}</p>
                                {{else}}
                                <p>Unknown</p>
                                {{/if}}
                                <em>{{description}}</em>
                                {{#if audio_guide}}
                                <p><b>Audio guide:</b> <em>present</em></p>
                                {{/if}}
                            </li>
                            {{/each}}
                            {{/with}}

                            {{/if}}

                        </div>
                        <div>
                            {{#if details.venue}}
                            {{#with details.venue}}
                            <b>{{name}}</b>
                            {{#with location}}
                            <address>
                                {{address}}
                                {{city}}
                                {{country}}
                            </address>
                            {{/with}}
                            <br>
                            {{/with}}
                            <div>
                                {{#each details.performers}}
                                <li>
                                    {{name}}
                                    {{type}}
                                </li>
                                {{/each}}
                            </div>
                            {{/if}}
                        </div>
                        <div>
                            {{#with details.guide}}
                            {{name}}, <em>{{language}}</em> ({{rating}})
                            {{/with}}
                        </div>
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{/with}}
        </div>
    </section>
    {{/with}}
</div>