<main>
    <div class="row">
        <div class="col-12">
            {{#with header}}
            <h1>{{title}}</h1>
            {{#with button}}
            <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
            {{/with}}
            {{/with}}
            <hr>
            {{#each goodsBlock}}
            <div class="card my-4">
                <div class="row">
                    <div class="col-2">
                        <img src="{{image}}" alt="img">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <h5 class="card-title">{{name}}</h5>
                                    <p class="card-text">{{description}}</p>
                                </div>

                                <div class="col-4">
                                    {{#with price}}
                                    {{title}}: <h4>{{value}}</h4>
                                    {{/with}}
                                </div>

                                <div class="col-2">
                                    <p>{{amount}}</p>
                                </div>

                                <div class="col-2">
                                    {{#each buttons}}
                                    {{#if isPrimary}}
                                    <button class="btn btn-primary my-2">{{text}}</button>
                                    {{/if}}
                                    {{#if isDanger}}
                                    <button class="btn btn-outline-danger">{{text}}</button>
                                    {{/if}}
                                    {{/each}}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            <hr>
            {{#with total}}
            <h3>{{title}}</h3>
            <h2>{{amount}}</h2>
            <p>{{delivery}}</p>
            {{#each buttons}}
            {{#if isSuccess}}
            <button class="btn btn-success">{{text}}</button>
            {{/if}}
            {{#if isOutline}}
            <button class="btn btn-outline-success">{{text}}</button>
            {{/if}}
            {{/each}}
            {{/with}}
            <hr>
            {{#with goodsOtherBlock}}
            {{> shopcard}}
            {{/with}}
            <hr>
            {{#with subscribe}}
            <div class="card text-bg-dark">
                <div class="card-body">
                    <h2 class="card-title">{{header}}</h2>
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    {{/each}}
                </div>
            </div>

            {{/with}}
        </div>
    </div>
</main>