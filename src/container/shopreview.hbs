<main>
    <div class="row">
        <div class="col-12">

            {{#with formBlock}}

            <div class="row">
                <div class="col-8">
                    <h1 class="my-4">{{header}}</h1>

                    {{#with rating}}
                    <p>
                        {{title}}: {{value}}
                    </p>
                    {{/with}}

                    {{#with actionBlock}}

                    <ul class="nav nav-tabs my-4">
                        {{#each tabs}}
                        <li class="nav-item">
                            {{#if @last}}
                            <a href="#" class="nav-link active">{{text}}</a>
                            {{else}}
                            <a href="#" class="nav-link">{{text}}</a>
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                    <hr>

                    {{#with report}}
                    <div class="card my-5">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            {{#with button}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                    <hr>

                    {{/with}}

                    {{#with feedbackBlock}}
                    <h2 class="my-4">{{title}}</h2>
                    {{#each buttons}}

                    {{#if isWarning}}
                    <a href="{{link}}" class="btn btn-warning">{{text}}</a>
                    {{/if}}

                    {{#if isSuccess}}
                    <a href="{{link}}" class="btn btn-success">{{text}}</a>
                    {{/if}}

                    {{#if isDanger}}
                    <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                    {{/if}}

                    {{/each}}
                    {{/with}}

                </div>

                <div class="col-4">
                    {{#with goodsInfo}}
                    <div class="card">
                        <img src="{{photo}}">
                        <div class="card-body">
                            <h6>{{name}}</h6>
                        </div>
                    </div>
                    <div class="card my-3">
                        <div class="card-body">
                            <h5 class="card-title">{{price}}</h5>
                            {{#if inMarket}}
                            {{#each buttons}}

                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/if}}

                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/if}}

                            {{/each}}
                            {{else}}
                            {{null}}
                            {{/if}}
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            {{#with seller}}
                            <p>
                                {{title}}: <b>{{value}}</b>
                            </p>
                            {{/with}}
                        </div>
                    </div>

                    {{/with}}
                </div>

            </div>
            {{/with}}

            <hr>

            {{#each reviewList}}
            {{> reviewItem}}
            {{/each}}

            {{> shopaction}}

        </div>
    </div>
</main>