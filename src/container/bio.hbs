<main class="row p-5">
    <div class="col-12">
        <section>
            <h1>{{name}}</h1>
            <hr>

            {{birthdate}} ({{birthplace}}) â€”

            {{deathdate}} ({{deathplace}})

            <em>{{nationality}}

                {{occupation}}
            </em>

        </section>
        <ul>
            {{#each known_for}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <section>
            <div>
                {{> title data="Education" big=true}}
                <ul>
                    {{#each education}}
                    <li>
                        {{degree}} <em>({{field}})</em>

                        {{institution}} <em>({{year}})</em>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
        <section>
            {{> title data="Publications" big=false}}
            <ul>
                {{#each notable_publications}}
                <li>
                    <em>{{title}} ({{year}})</em>

                    <p class="my-2">
                        <small>{{publisher}}</small>
                    </p>
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="Partners" big=false}}
            <ul>
                {{#each partners}}
                <li>
                    <em>{{name}} ({{years}})</em>

                    <p class="my-2">
                        <small>{{relationship}}</small>
                    </p>
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="Awards" big=false}}
            <hr>
            <div>
                {{#each awards}}
                <li>
                    <em>{{title}} ({{year}})</em>

                    <p class="mt-3">{{description}}</p>
                </li>
                {{/each}}
            </div>
        </section>
        <section>
            <table style="border: 1px solid black; width:100%">
                <tr>
                    <th style="border: 1px solid black">Influences</th>
                    <th style="border: 1px solid black">Influenced</th>
                </tr>
                <tr>
                    <td style="border: 1px solid black">
                        <ul>
                            {{#each influences}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </td>
                    <td style="border: 1px solid black">
                        <ul>
                            {{#each influenced}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </td>
                </tr>
            </table>
        </section>
        <section>
            {{> title data="Quotes:"}}
            <div>
                {{#each quotes}}
                <p><q>{{this}}</q></p>
                {{/each}}
            </div>
        </section>
        <section>
            {{> title data="Discoveries and Contributions"}}
            <ul>
                {{#each major_discoveries}}
                <li>
                    <em>{{title}} ({{year}})</em>

                    <p class="my-3">{{description}}</p>
                </li>
                {{/each}}
            </ul>
            <div>
                {{#with contributions}}
                <li>
                    <em>{{title}} ({{year}})</em>

                    <p class="my-3">{{description}}</p>
                    <em>({{field}})</em>
                </li>
                {{/with}}
            </div>
        </section>
    </div>
</main>