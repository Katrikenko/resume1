<div class="row">
    {{#with main}}
    <main class="col-12">
        <section>
            {{> title data="My educations" big=true}}
            <ul>
                {{#each education}}
                <li class="m-2">
                    {{name}}
                    {{#unless isEnd}}
                    (still in progress...)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li class="m-2">
                    <b>{{name}}</b>

                    ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>