<div class="row">
    {{#with main}}
    <main class="col-12">
        <section>
            {{> title data="Work history" big=true}}
            <div class="row">
                <ul>
                    {{#each works}}

                    <li>
                        <b><ins>{{position}}</ins></b>

                        <div class="my-3">{{duration.from}} — {{#if duration.to}} {{duration.to}} {{else}} (still
                            working...) {{/if}}
                        </div>

                        <div>
                            <em>Company:</em>
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                        </div>

                        <div class="my-4">
                            <strong>
                                <h5>Projects ({{projectAmount}})</h5>
                            </strong>
                        </div>



                        <ul>
                            {{#each projects}}
                            <li style="list-style: none;" class="col-6">
                                <div>
                                    {{#if company.url}}
                                    {{> link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}}
                                    <b>{{company.name}}</b>
                                    {{/if}}

                                </div>

                                <div>
                                    <p>{{about}}</p>
                                </div>


                                <div class="my-3"><em>Project stacks ({{stackAmount}})</em></div>

                            </li>
                            {{#each stacks}}
                            <li>
                                {{name}}
                            </li>
                            {{/each}}

                            <div class="my-3"><em>Project awards</em></div>

                            <div>
                                {{#each awards}}
                                <li>
                                    {{name}}
                                </li>
                                {{/each}}
                            </div>
                        </ul>

                    </li>
                    {{/each}}
                </ul>

                </li>

                {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}

</div>

