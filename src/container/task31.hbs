<main>
    <div class="row">
        <nav class="row">
            {{#with navigation}}
            {{#each links}}
            <div class="col-2">
                <a href="{{href}}">{{text}}</a>
            </div>
            {{/each}}
            {{#with button}}
            <div class="col-2">
                <a class="btn btn-primary" href="{{href}}">{{text}}</a>
            </div>
            {{/with}}
            {{/with}}
        </nav>

        <hr>

        <header>
            {{#with header}}
            <h1>{{title}}</h1>
            <p>{{description}}</p>
            {{#with button}}
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            {{/with}}
            {{/with}}
        </header>

        <hr>

        <section>
            {{#with city}}
            <h2>{{title}}</h2>
            <br>
            <div class="row gx-2 gy-4">
                {{#each cards}}
                <div class="col-6">
                    <div class="card">
                        {{#with picture}}
                        <img class="card-img-top" src="{{src}}" alt="{{alt}}">
                        {{/with}}
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p>{{description}}</p>
                            {{#with button}}
                            <a href="{{href}}" class="btn btn-primary">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </section>

        <hr>

        <section>
            {{#with winner}}
            <h2>{{title}}</h2>
            <br>
            <div>
                {{#with table}}
                <table class="table">
                    <thead>
                        <tr>
                            {{#each head}}
                            <th>{{this}}</th>
                            {{/each}}
                        </tr>
                    </thead>

                    <tbody>
                        {{#each user}}
                        <tr>
                            <th>{{place}}</td>
                            <td>{{name}}</td>
                            <td>{{surname}}</td>
                            <td>{{nickname}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/with}}
            </div>
            {{/with}}
        </section>

        <hr>

        <section>
            {{#with gallery}}
            <h2>{{title}}</h2>
            <br>
            <div class="row gx-2">
                {{#each cards}}
                <div class="col-4">
                    <div class="card">
                        <div class="card-header">
                            <div>{{name}}</div>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item">{{items.[0]}}</li>
                            <li class="list-group-item">{{items.[1]}}</li>
                            <li class="list-group-item">{{items.[2]}}</li>
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </section>

        <hr>

        <section class="row gx-2 gy-3">
            {{#with relaxion}}
            <div class="display-3">{{title}}</div>
            <br>
            <br>
            {{#each cards}}
            <div class="col-5">
                <div class="card text-bg-secondary">

                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>

                </div>
            </div>
            {{/each}}
            {{/with}}
        </section>

        <hr>

        <section class="row gx-2 gy-3">
            {{#with rest}}
            {{#each cards}}

            <div class="col-6">
                <div class="card text-center">
                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                        <button class="btn btn-primary">{{button}}</button>
                    </div>
                    <div class="card-footer">{{footer}}</div>

                </div>

            </div>
            {{/each}}
            {{/with}}
        </section>

        <hr>

        <section class="row gx-2 gy-3">

            {{#with proposition}}
            <div class="display-2">{{title}}</div>
            <br>
            {{#each card}}
            <div class="col-5">
                <div class="card text-bg-warning text-light">

                    <div class="card-header">
                        {{header}}
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/with}}

        </section>

        <hr>

        <footer>

            {{#with footer}}
            <div class="row">
                <h5>{{title}}</h5>
                <div class="col-3">
                    {{#each navigation}}
                    <a class="btn btn-link" href="{{href}}">{{text}}</a>
                    <br>
                    <br>
                    {{/each}}
                </div>
                <div class="col-3">
                    {{#each socialMedia}}
                    <a class="btn btn-outline-dark" href="{{link}}">{{name}}</a>
                    <br>
                    <br>
                    {{/each}}
                </div>
                <div class="col-3">
                    {{#each partners}}
                    <a class="btn btn-outline-info" href="{{link}}">{{name}}</a>
                    <br>
                    <br>
                    {{/each}}
                </div>
            </div>
            {{/with}}

        </footer>

    </div>
</main>