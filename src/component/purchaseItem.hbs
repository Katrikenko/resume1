<div class="card">
    <div class="row">
        <div class="col-3">
            <p class="my-5">
                {{number}}
                <b>{{status}}</b>
            </p>
        </div>
        <div class="col-8">
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        {{#with amount}}
                        <p>
                            {{title}}:
                        <h6>{{value}}</h6>
                        </p>
                        {{/with}}
                    </div>
                    <div class="col-8">
                        {{#each images}}
                        <img src="{{this}}" alt="img" class="rounded">
                        {{/each}}
                    </div>
                    <div class="col-2">
                        {{#with button}}
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/if}}
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>