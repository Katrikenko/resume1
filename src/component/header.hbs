{{#with header}}
<header class="p-3">
    <div class="mb-2">
        <h1>{{name.firstname}} {{name.lastname}}</h1>
    </div>
    <div class="mb-2">
        <b>{{position}}</b>
    </div>
    <div class="mb-2">
        <em>{{salary}}</em>
    </div>
    <div class="mb-2">
        <em>{{address}}</em>
    </div>
    <hr class="my-4" />
</header>
{{/with}}