<div class="row">
    {{#if title}}
    <h2 class="text-center mb-3">{{title}}</h2>
    {{/if}}
    {{#each cards}}
    <div class="col-4">
        <div class="card">
            <img class="card-img-top" src="{{image}}">
            <div class="card-body">
                <h5 class="card-title">
                    {{title}}
                    {{#if isHot}}
                    <span class="badge text-bg-warning rounded-pill text-uppercase">Hot!</span>
                    {{else}}
                    {{null}}
                    {{/if}}
                    {{#if isNew}}
                    <span class="badge text-bg-primary rounded-pill">New</span>
                    {{else}}
                    {{null}}
                    {{/if}}
                </h5>
                <p class="mb-0">{{description}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>