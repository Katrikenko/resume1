<div class="card my-4">
    <div class="row">
        <div class="col-2">
            <img src="{{image}}" alt="img">
        </div>
        <div class="col-8">
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>

                    <div class="col-4">
                        {{#with price}}
                        {{title}}: <h4>{{value}}</h4>
                        {{/with}}
                    </div>

                    <div class="col-2">
                        <p>{{amount}}</p>
                    </div>

                    <div class="col-2">
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-primary my-2">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button class="btn btn-outline-danger">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>